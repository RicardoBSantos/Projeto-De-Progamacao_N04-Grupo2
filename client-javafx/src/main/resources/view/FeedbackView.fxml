<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.novaaurora.events.controller.FeedbackController" spacing="10">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <Label text="Avaliação" styleClass="heading" />
    <TextArea fx:id="txtFeedback" promptText="Digite sua avaliação aqui..." prefRowCount="10" />
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Enviar" onAction="#onSubmit" />
        <Button text="Limpar" onAction="#onClear" />
    </HBox>
</VBox>