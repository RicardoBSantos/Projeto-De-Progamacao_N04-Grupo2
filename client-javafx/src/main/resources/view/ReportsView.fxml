<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.novaaurora.events.controller.ReportsController" spacing="10">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <Label text="Relatórios" styleClass="heading" />
    <GridPane hgap="10" vgap="10">
        <Label text="Total de Eventos:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <Label fx:id="lblTotalEvents" GridPane.rowIndex="0" GridPane.columnIndex="1" />

        <Label text="Total de Participantes:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
        <Label fx:id="lblTotalParticipants" GridPane.rowIndex="1" GridPane.columnIndex="1" />

        <Label text="Vagas Disponíveis:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
        <Label fx:id="lblAvailableSeats" GridPane.rowIndex="2" GridPane.columnIndex="1" />
    </GridPane>
    <Button text="Atualizar" onAction="#onRefresh" />
</VBox>